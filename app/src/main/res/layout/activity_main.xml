<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_dialpad_1_blue" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="@+id/imageButton1"
                app:srcCompat="@drawable/ic_dialpad_2_blue"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="0dip"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_dialpad_3_blue"
                tools:layout_editor_absoluteX="252dp"
                tools:layout_editor_absoluteY="26dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="107dp"
                android:layout_height="136dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_dialpad_4_blue"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="124dp" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="67dp"
                android:layout_height="78dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_dialpad_5_blue"
                tools:layout_editor_absoluteX="159dp"
                tools:layout_editor_absoluteY="150dp" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="68dp"
                android:layout_height="82dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_dialpad_6_blue"
                tools:layout_editor_absoluteX="264dp"
                tools:layout_editor_absoluteY="150dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="111dp"
                android:layout_height="75dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_dialpad_7_blue"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="267dp" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="107dp"
                android:layout_height="85dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_dialpad_8_blue"
                tools:layout_editor_absoluteX="170dp"
                tools:layout_editor_absoluteY="260dp" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="67dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_dialpad_9_blue"
                tools:layout_editor_absoluteX="301dp"
                tools:layout_editor_absoluteY="260dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButtonStar"
                android:layout_width="75dp"
                android:layout_height="82dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_dialpad_star_blue"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="377dp" />

            <ImageButton
                android:id="@+id/imageButton0"
                android:layout_width="77dp"
                android:layout_height="76dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_dialpad_0_blue"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="398dp" />

            <ImageButton
                android:id="@+id/imageButtonPound"
                android:layout_width="115dp"
                android:layout_height="124dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_dialpad_pound_blue"
                tools:layout_editor_absoluteX="253dp"
                tools:layout_editor_absoluteY="358dp" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>