<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        >
        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_dialpad_1_blue" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_dialpad_2_blue" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_dialpad_3_blue" />


        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_dialpad_4_blue" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_dialpad_5_blue" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_dialpad_6_blue" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_dialpad_7_blue" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_dialpad_8_blue" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_dialpad_9_blue" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="center">


            <ImageView
                android:id="@+id/imageViewStar"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_dialpad_star_blue" />

            <ImageView
                android:id="@+id/imageView0"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_dialpad_0_blue" />

            <ImageView
                android:id="@+id/imageViewPound"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_dialpad_pound_blue" />
        </TableRow>
    </TableLayout>
</merge>